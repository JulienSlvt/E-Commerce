@model List<E_Comerce.Models.Metier.Produit>

@{
    ViewBag.Title = "Produits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null && Model.Any())
{
    <div class="container">
        <div class="col-md-8 col-sm-8">
            <div class="blanc">
                <h1>Liste des Produits</h1>
            </div>

            <table class="table table-bordered table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <!-- Add more columns as needed -->
                        <th style="width:80px">Modification</th>
                        <th style="width:80px">Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var produit in Model)
                    {
                        <tr>
                            <td><a href="@Url.Action("Details", "Produit", new { id = produit.Id_produit })" class="btn btn-default btn-primary">@produit.Id_produit</a></td>
                            <td>@produit.Nom</td>
                            <td>@produit.Description</td>
                            <td>@produit.Prix</td>
                            <!-- Add more cells as needed -->
                            <td style="text-align:center;">
                                <span>
                                    <a href="@Url.Action("Edit", "Produit", new { id = produit.Id_produit })" class="btn btn-default btn-primary">
                                        <i class="bi bi-pencil-fill">Edit</i>
                                    </a>
                                </span>
                            </td>
                            <td style="text-align:center;">
                                <span>
                                    <a href="@Url.Action("Delete", "Produit", new { id = produit.Id_produit })" class="btn btn-default btn-primary">
                                        <i class="bi bi-trash3-fill">Delete</i>
                                    </a>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group">
                <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
                    @Html.ActionLink("Retourner à l'accueil", "Index", "Home", null, new { @class = "btn btn-default btn-primary" })
                    <a href="/Produit/Create" class="btn btn-default btn-primary">
                        Ajouter un produit
                    </a>
                </div>

            </div>
        </div>
    </div>
}
else
{
    <p>Aucun produit trouvé.</p>
}
